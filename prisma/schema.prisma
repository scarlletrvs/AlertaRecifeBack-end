// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Ocorrencia {
  id                    String   @id @default(uuid())
  descricaoDaOcorrencia String
  latitude              Decimal
  longitude             Decimal
  dataHora              DateTime @default(now())
  email                 String   @unique
  autor                 Usuario  @relation(fields: [email], references: [id])
}

model Usuario {
  id          String       @id @default(uuid())
  nome        String
  email       String
  fotoPerfil  String
  Ocorrencias Ocorrencia[]
}
